{{#if resume.work.length}}
<section class="section">
  <header>
    <h3 class='section-title'>Work Experience</h2>
    <div class="bar"></div>
  </header>

  <section id="work">
    {{#each resume.work}}
    <section class="work-item">
        {{#if summary}}
        <label for="work-item-{{@index}}"></label>
        {{/if}}

        <header class="clear">
          <div class="date">
            {{#if startDate}}
            <span class="startDate">{{MY startDate}}</span>
            {{/if}}
            {{#if endDate}}
            <span class="endDate">- {{MY endDate}}</span>
            {{else}}
            <span class="endDate">- Current</span>
            {{/if}}
          </div>
          {{#if position}}
          <div class="position">{{position}}</div>
          {{/if}}
          {{#if url}}
            <span class="company">
              <a target="_blank" href="{{url}}">{{name}}</a>
            </span>
          {{else}}
            <div class="company">{{name}}</div>
          {{/if}}
        </header>

      {{#location}}
      <span class="location">
        {{#if city}}
        <span class="city">{{city}}</span>
        {{/if}}
        {{#if region}}
        <span class="region">{{region}}</span>
        {{/if}}
      </span>
      {{/location}}
      {{#if url}}
      <ul class="keywords">
        {{#each keywords}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
      {{/if}}
      <div class="item" id="work-item">
        {{#if summary}}
        <div class="summary">{{paragraphSplit summary}}</div>
        {{/if}}
        {{#if highlights.length}}
        <ul class="highlights">
          {{#each highlights}}
          <li>{{paragraphSplit .}}</li>
          {{/each}}
        </ul>
        {{/if}}
      </div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}
